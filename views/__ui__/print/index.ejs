<div id="action_bar" class="xrx-action-bar xrx-background">
    <div id="title-bar" class="xrx-action-bar-label"><%- __('app.jobs') %></div>
    <button id="btn-exit" class="xrx-action-bar-button-left"><%- __('btn.exit') %></button>
    <button id="btn-print" class="xrx-action-bar-button-right"><%- __('btn.print') %></button>
</div>
<div id="tableContainer">
    <table>
        <thead>
            <tr>
                <th><input type="checkbox" class="checkall" /></th>
                <th><b><%- __('field.name') %></b></th>
                <th><i class="fa fa-book"></i></th>
                <th><i class="fa fa-copy"></i></th>
                <th colspan="2"><i class="fa fa-palette"></i></th>
            </tr>
        </thead>
        <tbody>
            <% for (let job of jobs) { %>
            <tr>
                <td><input type="checkbox" data-job="<%- job._id %>" data-name="<%- job.name.replace(/"/g, '').replace(/'/g, '') %>"
                    <% for (let option in job.options) { %>data-<%- option %>="<%- job.options[option] %>" <% }; %> /></td>
                <td><%- job.name %></td>
                <td><%- job.options.pages %></td>
                <td><%- job.options.copies %></td>
                <td><% if (job.options.color) { %><%- __('field.color').substr(0, 1) %><%};%></td>
                <td><button class="delete fa-pull-right"></button></td>
            </tr>
            <% }; %>
        </tbody>
    </table>
</div>
<div id="print-container" style="display: none;">
    <table>
        <tbody>
            <tr>
                <td><img src="/images/iconset/output_color_full_48.png" height="48" width="48"></td>
                <td>Color</td>
                <td align="right"><div style="float:right" id="switch-color"></div></td>
            </tr>
            <tr>
                <td><img src="/images/iconset/2sided_2sided_48.png" height="48" width="48"></td>
                <td>2-Sided</td>
                <td align="right"><div style="float:right" id="switch-side"></td>
            </tr>
            <tr>
                <td><img src="/images/iconset/book_copy_48.png" height="48" width="48"></td>
                <td><%- __('field.copies.p') %></td>
                <td align="right"><input id="field-copies" type="text"></td>
            </tr>
        </tbody>
    </table>
</div>
<% include ../common-scripts %>
<% include ../print-scripts %>
<% include ./scripts %>
